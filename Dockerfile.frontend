# -------------------
# Frontend Dockerfile
# -------------------
FROM python:3.11-slim

WORKDIR /app

COPY requirements_frontend.txt .

RUN pip install --no-cache-dir -r requirements_frontend.txt

COPY . .

EXPOSE 8501

CMD ["streamlit", "run", "frontend/app.py", "--server.port=8501", "--server.address=0.0.0.0"]
